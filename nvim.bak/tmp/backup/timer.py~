import tkinter as tk
import time

class FlashingWindow(tk.Tk):
    def __init__(self):
        super().__init__()

        # 设置窗口标题
        self.title("Flashing Window")

        # 设置窗口大小
        self.geometry("300x200")

        # 初始化窗口在屏幕中心
        screen_width = self.winfo_screenwidth()
        screen_height = self.winfo_screenheight()
        x = (screen_width / 2) - (300 / 2)
        y = (screen_height / 2) - (200 / 2)
        self.geometry("+%d+%d" % (x, y))

        # 设置定时时间，例如1秒
        self.after(1000*60*5, self.flash_screen)

    def flash_screen(self):
        colors = ["red", "blue", "green", "yellow"]
        flash_duration = 5  # 5 seconds
        flash_interval = flash_duration / (len(colors) * 2)  # time for each color to show

        end_time = time.time() + flash_duration
        while time.time() < end_time:
            for color in colors:
                self.configure(bg=color)
                self.update()
                time.sleep(flash_interval)

if __name__ == "__main__":
    app = FlashingWindow()
    app.mainloop()

