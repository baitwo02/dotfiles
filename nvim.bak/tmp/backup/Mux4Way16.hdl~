// File name: projects/01/Mux4Way16.hdl
/**
 * 4-way 16-bit multiplexor:
 * out = a if sel == 00
 *       b if sel == 01
 *       c if sel == 10
 *       d if sel == 11
 */
CHIP Mux4Way16 {
    IN a[16], b[16], c[16], d[16], sel[2];
    OUT out[16];
    
    PARTS:
    // Replace this comment with your code.
    Not (in=sel[0], out=nsel0);
    Not (in=sel[1], out=nsel1);
    And16 (a[0..15]=nsel0,   b[0..15]=nsel1,  out=ca);
    And (a=nsel0,   b=nsel1,  out=ca);
    And (a=nsel0,   b=sel[1], out=cb);
    And (a=sel[0],  b=nsel1,  out=cc);
    And (a=sel[0],  b=sel[1], out=cd);
    And16 (a=a, b=true, out=outa);
    And16 (a=b, b=cb, out=outb);
    And16 (a=c, b=cc, out=outc);
    And16 (a=d, b=cd, out=outd);
    Or (a=outa, b=outb, out=out1);
    Or (a=outc, b=outd, out=out2);
    Or (a=out1, b=out2, out=out);
}
